{
    "private": true,
    "workspaces": [
        "oceanics-io-www",
        "oceanics-io-ui",
        "oceanics-io-fcns",
        "oceanics-io-wasm/*"
    ],
    "packageManager": "yarn@3.1.0",
    "dependencies": {
        "@netlify/functions": "^0.10.0",
        "ajv": "^8.10.0",
        "ajv-formats": "^2.1.1",
        "aws-sdk": "^2.1101.0",
        "js-yaml": "^4.1.0",
        "jsonwebtoken": "^8.5.1",
        "neo4j-driver": "^4.4.1",
        "stripe": "^8.210.0"
    },
    "devDependencies": {
        "@types/ajv": "^1.0.0",
        "@types/jsonwebtoken": "^8.5.6",
        "mocha": "^9.1.3",
        "netlify-cli": "^9.13.6",
        "netlify-lambda": "^2.0.15",
        "node-fetch": "^3.1.0"
    },
    "scripts": {
        "api:spec": "js-yaml oceanics-io-www/public/bathysphere.yaml > oceanics-io-fcns/src/api-validator/bathysphere.json",
        "api:build:wasm": "wasm-pack build oceanics-io-wasm --out-dir ../oceanics-io-fcns/src/shared/pkg --target nodejs",
        "api:build": "yarn api:spec && yarn api:build:wasm",
        "api:test": "mocha",
        "netlify": "netlify dev --dir=oceanics-io-www/build",
        "wasm:build": "rm -rf oceanics-io-wasm/build && wasm-pack build oceanics-io-wasm --out-dir build --out-name index && (rm oceanics-io-wasm/build/.gitignore || :)",
        "build": "yarn workspaces foreach run build"
    }
}
