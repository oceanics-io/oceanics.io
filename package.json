{
    "private": true,
    "workspaces": [
        "oceanics-io-www",
        "oceanics-io-ui",
        "oceanics-io-fcns",
        "oceanics-io-wasm/*"
    ],
    "packageManager": "yarn@3.1.0",
    "dependencies": {
        "@netlify/functions": "^0.10.0",
        "aws-sdk": "^2.1036.0",
        "jsonwebtoken": "^8.5.1",
        "neo4j-driver": "^4.4.1",
        "stripe": "^8.195.0"
    },
    "devDependencies": {
        "@types/jsonwebtoken": "^8.5.6",
        "mocha": "^9.1.3",
        "netlify-cli": "^8.2.3",
        "netlify-lambda": "^2.0.15",
        "node-fetch": "^3.1.0"
    },
    "scripts": {
        "api:build": "wasm-pack build oceanics-io-wasm --out-dir oceanics-io-fcns/src/shared/pkg --target nodejs",
        "api:dev": "netlify dev",
        "api:test": "mocha",
        "www:serve": "netlify dev --dir=oceanics-io-www/build",
        "wasm:build": "rm -rf oceanics-io-wasm/build && wasm-pack build oceanics-io-wasm --out-dir build --out-name index && (rm oceanics-io-wasm/build/.gitignore || :)",
        "build": "yarn workspaces foreach run build"
    }
}
